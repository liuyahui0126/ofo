/* projects/my/my.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.userInfo{
  background-color: #fff;
  padding: 60rpx;
}
.userInfo image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  display: block;
  margin:  0 auto;
  margin-bottom: 60rpx;
  box-shadow: 0 0 4px;
}
.userInfo .user-name{
  font-size: 32rpx;
  text-align: center;
}
.wallet{
  font-size: 32rpx;
  background-color: #fff;
  padding: 40rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
button{
  position: absolute;
  bottom: 60rpx;
  width: 90%;
  left: 5%;
}