/* projects/warn/warn.wxss */
.container{
  width: 100%;
  background-color: #f2f2f2;
}
.title{
  padding: 30rpx 0rpx 30rpx 40rpx;
  font-size: 30rpx;
  background-color: #f2f2f2;
}
.choose{
  background-color: #fff;
}
.choose checkbox-group{
  display: flex;
   justify-content: space-around;
  flex-wrap: wrap;
  align-items: center; 
  padding: 50rpx;
}
checkbox-group checkbox{
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border:2px solid #b9dd08;
  margin-top: 36rpx;
  border-radius: 6px;
  font-size: 32rpx;
}
checkbox-group checkbox:nth-of-type(1),
checkbox-group checkbox:nth-of-type(2){
  margin-top: 0;
}
.action-pics{
  background-color: #fff;
  padding: 30rpx 0 30rpx 40rpx;
}
.action-pics image{
  position: relative;
  height: 100rpx;
  width: 100rpx;
  margin-right:78rpx;
  overflow: visible;
  vertical-align: top;
  margin-bottom: 8px;
}
.action-pics icon{
  position: absolute;
  right: -10rpx;
  top:-10rpx;
}
.action-pics .add{
  display: inline-block;
  font-size: 20rpx;
  color:#888;
  line-height: 100rpx;
  text-align: center;
  height: 100rpx;
  width: 100rpx;
  border: 2px dotted #ccc;
}
.action-input{
  margin-top: 40rpx;
  background-color: #fff;
  padding: 40rpx;
}
.action-input input{
  padding: 15rpx 0;
  font-size: 32rpx;
}
.action-input input:nth-of-type(1){
  border-bottom: 1px solid #ccc;
}
.action-submit{
  padding:40rpx;
}
.action-submit button{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #b9dd08;
}